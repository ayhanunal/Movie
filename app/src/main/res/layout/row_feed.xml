<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="movie"
            type="com.ayhanunal.movies.model.Result" />
        <variable
            name="listener"
            type="com.ayhanunal.movies.adapter.listener.MovieClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:onClick="@{listener::onMovieClicked}"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="5dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/row_feed_movie_image"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:downloadUrl="@{@string/row_feed_poster_image(movie.poster_path)}"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/row_feed_movie_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_margin="4dp"
                        android:text="@{movie.title}"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/row_feed_movie_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text="@{`Release Date: ` + movie.release_date}" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/row_feed_movie_language"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text="@{`Movie Language: ` + movie.original_language}" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/row_feed_movie_popularity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text="@{`Movie Popularity: ` + movie.popularity}" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/row_feed_movie_adult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{movie.adult ? `Adult: Yes` : `Adult: No`}"
                        android:layout_margin="2dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/row_feed_movie_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:visibility="gone"
                        android:text="@{String.valueOf(movie.id)}" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>
